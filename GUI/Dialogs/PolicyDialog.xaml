<Window x:Class="PIMBuddy.PolicyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Configure PIM Policy"
        Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="500"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock x:Name="DialogTitle" Text="Configure PIM Policy" Style="{StaticResource SubheaderText}"/>
            <TextBlock x:Name="DialogSubtitle" Text="Configure policy settings for this group"
                       Style="{StaticResource CaptionText}" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Form -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- Access Type Selector -->
                <StackPanel Margin="0,0,0,16">
                    <TextBlock Text="Configure Access Type" Style="{StaticResource BodyText}" Margin="0,0,0,8"/>
                    <StackPanel Orientation="Horizontal">
                        <RadioButton x:Name="MemberAccess" Content="Member Access" IsChecked="True"
                                     GroupName="AccessType" Margin="0,0,24,0"/>
                        <RadioButton x:Name="OwnerAccess" Content="Owner Access" GroupName="AccessType"/>
                    </StackPanel>
                </StackPanel>

                <Separator Style="{StaticResource ModernSeparator}" Margin="0,8,0,16"/>

                <!-- Activation Settings -->
                <Expander Header="Activation Settings" Style="{StaticResource ModernExpander}"
                          IsExpanded="True" Margin="0,0,0,16">
                    <Border Background="{DynamicResource CardBrush}" CornerRadius="4" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <!-- Maximum Duration -->
                            <StackPanel Margin="0,0,0,16">
                                <TextBlock Text="Maximum Activation Duration" Style="{StaticResource BodyText}" Margin="0,0,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="ActivationDurationSlider" Grid.Column="0"
                                            Minimum="1" Maximum="24" Value="8"
                                            TickFrequency="1" IsSnapToTickEnabled="True"
                                            Style="{StaticResource ModernSlider}"/>
                                    <TextBlock x:Name="ActivationDurationValue" Grid.Column="1"
                                               Text="8 hours" Style="{StaticResource BodyText}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>

                            <!-- Checkboxes -->
                            <CheckBox x:Name="RequireMfaCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require MFA on activation" Margin="0,0,0,8"/>
                            <CheckBox x:Name="RequireJustificationCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require justification" Margin="0,0,0,8"/>
                            <CheckBox x:Name="RequireTicketInfoCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require ticket information" Margin="0,0,0,8"/>

                            <!-- Approval -->
                            <CheckBox x:Name="RequireApprovalCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require approval" Margin="0,0,0,8"/>

                            <StackPanel x:Name="ApproversPanel" Margin="24,0,0,0" Visibility="Collapsed">
                                <TextBlock Text="Approvers" Style="{StaticResource CaptionText}" Margin="0,0,0,4"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="ApproverSearchBox" Grid.Column="0"
                                             Style="{StaticResource ModernTextBox}" Tag="Search for approvers..."/>
                                    <Button x:Name="AddApproverButton" Grid.Column="1"
                                            Style="{StaticResource SecondaryButton}" Content="Add"
                                            Margin="8,0,0,0" Padding="12,8"/>
                                </Grid>
                                <ListBox x:Name="ApproversListBox" MaxHeight="80" Margin="0,8,0,0"
                                         Style="{StaticResource ModernListView}"
                                         ItemContainerStyle="{StaticResource ModernListViewItem}"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- Eligible Assignment Settings -->
                <Expander Header="Eligible Assignment Settings" Style="{StaticResource ModernExpander}" Margin="0,0,0,16">
                    <Border Background="{DynamicResource CardBrush}" CornerRadius="4" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <CheckBox x:Name="AllowPermanentEligibleCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Allow permanent eligible assignments" IsChecked="True" Margin="0,0,0,8"/>

                            <StackPanel x:Name="EligibleExpirationPanel" Visibility="Collapsed">
                                <TextBlock Text="Maximum eligible assignment duration (days)" Style="{StaticResource BodyText}" Margin="0,8,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="EligibleDurationSlider" Grid.Column="0"
                                            Minimum="1" Maximum="365" Value="180"
                                            TickFrequency="1" IsSnapToTickEnabled="True"
                                            Style="{StaticResource ModernSlider}"/>
                                    <TextBlock x:Name="EligibleDurationValue" Grid.Column="1"
                                               Text="180 days" Style="{StaticResource BodyText}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- Active Assignment Settings -->
                <Expander Header="Active Assignment Settings" Style="{StaticResource ModernExpander}" Margin="0,0,0,16">
                    <Border Background="{DynamicResource CardBrush}" CornerRadius="4" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <CheckBox x:Name="AllowPermanentActiveCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Allow permanent active assignments" IsChecked="True" Margin="0,0,0,8"/>

                            <StackPanel x:Name="ActiveExpirationPanel" Visibility="Collapsed">
                                <TextBlock Text="Maximum active assignment duration (days)" Style="{StaticResource BodyText}" Margin="0,8,0,8"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="60"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="ActiveDurationSlider" Grid.Column="0"
                                            Minimum="1" Maximum="365" Value="30"
                                            Style="{StaticResource ModernSlider}"/>
                                    <TextBlock x:Name="ActiveDurationValue" Grid.Column="1"
                                               Text="30 days" Style="{StaticResource BodyText}"
                                               HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>

                            <Separator Style="{StaticResource ModernSeparator}" Margin="0,12"/>

                            <CheckBox x:Name="ActiveRequireMfaCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require MFA for active assignment" Margin="0,0,0,8"/>
                            <CheckBox x:Name="ActiveRequireJustificationCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Require justification for active assignment"/>
                        </StackPanel>
                    </Border>
                </Expander>

                <!-- Notification Settings -->
                <Expander Header="Notification Settings" Style="{StaticResource ModernExpander}">
                    <Border Background="{DynamicResource CardBrush}" CornerRadius="4" Padding="16" Margin="0,8,0,0">
                        <StackPanel>
                            <CheckBox x:Name="NotifyAssigneeCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Send notification to assignee" IsChecked="True" Margin="0,0,0,8"/>
                            <CheckBox x:Name="NotifyApproversCheckbox" Style="{StaticResource ModernCheckBox}"
                                      Content="Send notification to approvers" IsChecked="True" Margin="0,0,0,8"/>

                            <TextBlock Text="Additional notification recipients" Style="{StaticResource BodyText}" Margin="0,12,0,4"/>
                            <TextBox x:Name="AdditionalRecipientsTextBox" Style="{StaticResource ModernTextBox}"
                                     Tag="Enter email addresses separated by semicolons"/>
                        </StackPanel>
                    </Border>
                </Expander>
            </StackPanel>
        </ScrollViewer>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="ApplyTemplateButton" Grid.Column="0" Style="{StaticResource SecondaryButton}"
                    Content="Apply Template..." Padding="16,10"/>

            <Button x:Name="CancelButton" Grid.Column="2" Style="{StaticResource SecondaryButton}"
                    Content="Cancel" Margin="0,0,8,0" IsCancel="True"/>
            <Button x:Name="SaveButton" Grid.Column="3" Style="{StaticResource PrimaryButton}"
                    Content="Save Changes" IsDefault="True"/>
        </Grid>
    </Grid>
</Window>

<Window x:Class="PIMBuddy.TemplateDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Apply Template"
        Height="650" Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        MinHeight="500" MinWidth="600"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,16">
            <TextBlock Text="Apply Policy Template" Style="{StaticResource SubheaderText}"/>
            <TextBlock Text="Select a template to apply to your PIM groups or roles"
                       Style="{StaticResource CaptionText}" TextWrapping="Wrap" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Template List -->
            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Padding="0" Margin="0,0,16,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Available Templates" Style="{StaticResource TitleText}"
                               Margin="16,16,16,8"/>

                    <ListBox x:Name="TemplateListBox" Grid.Row="1"
                             Style="{StaticResource ModernListView}"
                             ItemContainerStyle="{StaticResource ModernListViewItem}">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Margin="4">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="{Binding Icon}" FontFamily="{StaticResource IconFont}"
                                                   FontSize="18" Foreground="{DynamicResource PrimaryBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <TextBlock Text="{Binding Name}" Style="{StaticResource TitleText}"/>
                                    </StackPanel>
                                    <TextBlock Text="{Binding Description}" Style="{StaticResource CaptionText}"
                                               TextWrapping="Wrap" MaxWidth="220" Margin="26,4,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Template Details -->
            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                <Grid x:Name="TemplateDetailsPanel">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Placeholder when no template selected -->
                    <TextBlock x:Name="NoSelectionText" Grid.RowSpan="3"
                               Text="Select a template to view details"
                               Style="{StaticResource BodyText}"
                               Foreground="{DynamicResource TextSecondaryBrush}"
                               HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <!-- Template Header -->
                    <StackPanel x:Name="TemplateHeader" Grid.Row="0" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock x:Name="SelectedTemplateIcon" Text=""
                                       FontFamily="{StaticResource IconFont}" FontSize="28"
                                       Foreground="{DynamicResource PrimaryBrush}"
                                       VerticalAlignment="Center" Margin="0,0,12,0"/>
                            <TextBlock x:Name="SelectedTemplateName" Text=""
                                       Style="{StaticResource SubheaderText}"/>
                        </StackPanel>
                        <TextBlock x:Name="SelectedTemplateDescription" Text=""
                                   Style="{StaticResource BodyText}" TextWrapping="Wrap"/>

                        <!-- Warning if present -->
                        <Border x:Name="WarningBorder" Background="#FFF4CE" CornerRadius="4"
                                Padding="12" Margin="0,12,0,0" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="&#xE7BA;" FontFamily="{StaticResource IconFont}"
                                           FontSize="20" Foreground="#D83B01"
                                           VerticalAlignment="Top" Margin="0,0,8,0"/>
                                <TextBlock x:Name="WarningText" Grid.Column="1" Text=""
                                           TextWrapping="Wrap" Foreground="#323130"/>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- Tier Details -->
                    <ScrollViewer x:Name="TierDetailsScroll" Grid.Row="1" VerticalScrollBarVisibility="Auto"
                                  Margin="0,16,0,0" Visibility="Collapsed">
                        <ItemsControl x:Name="TiersList">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="{DynamicResource NavBackgroundBrush}"
                                            CornerRadius="4" Padding="12" Margin="0,0,0,12">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" Style="{StaticResource TitleText}"/>
                                            <TextBlock Text="{Binding Description}" Style="{StaticResource CaptionText}"
                                                       Margin="0,2,0,12"/>

                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Activation Settings -->
                                                <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                    <TextBlock Text="Activation" FontWeight="SemiBold"
                                                               Style="{StaticResource CaptionText}" Margin="0,0,0,4"/>
                                                    <TextBlock Style="{StaticResource CaptionText}">
                                                        <Run Text="Duration: "/><Run Text="{Binding Settings.Activation.MaximumDuration}"/>
                                                    </TextBlock>
                                                    <TextBlock Style="{StaticResource CaptionText}">
                                                        <Run Text="MFA: "/><Run Text="{Binding Settings.Activation.RequireMfa}"/>
                                                    </TextBlock>
                                                    <TextBlock Style="{StaticResource CaptionText}">
                                                        <Run Text="Approval: "/><Run Text="{Binding Settings.Activation.RequireApproval}"/>
                                                    </TextBlock>
                                                </StackPanel>

                                                <!-- Assignment Settings -->
                                                <StackPanel Grid.Column="1" Margin="8,0,0,0">
                                                    <TextBlock Text="Assignments" FontWeight="SemiBold"
                                                               Style="{StaticResource CaptionText}" Margin="0,0,0,4"/>
                                                    <TextBlock Style="{StaticResource CaptionText}">
                                                        <Run Text="Eligible Duration: "/><Run Text="{Binding Settings.EligibleAssignment.MaximumDuration}"/>
                                                    </TextBlock>
                                                    <TextBlock Style="{StaticResource CaptionText}">
                                                        <Run Text="Permanent Allowed: "/><Run Text="{Binding Settings.EligibleAssignment.AllowPermanent}"/>
                                                    </TextBlock>
                                                </StackPanel>
                                            </Grid>

                                            <!-- Applicable Roles -->
                                            <StackPanel Margin="0,8,0,0" Visibility="{Binding RolesVisibility}">
                                                <TextBlock Text="Applicable Roles:" FontWeight="SemiBold"
                                                           Style="{StaticResource CaptionText}" Margin="0,0,0,2"/>
                                                <TextBlock Text="{Binding RolesList}" Style="{StaticResource CaptionText}"
                                                           TextWrapping="Wrap" Foreground="{DynamicResource TextMutedBrush}"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Target Selection -->
                    <StackPanel x:Name="TargetSelectionPanel" Grid.Row="2" Visibility="Collapsed" Margin="0,16,0,0">
                        <Separator Style="{StaticResource ModernSeparator}" Margin="0,0,0,16"/>

                        <TextBlock Text="Apply To" Style="{StaticResource TitleText}" Margin="0,0,0,8"/>

                        <StackPanel Margin="0,0,0,8">
                            <TextBlock Text="Select Tier" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="TierComboBox" Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>

                        <StackPanel>
                            <TextBlock Text="Target Groups" Style="{StaticResource BodyText}" Margin="0,0,0,4"/>
                            <ComboBox x:Name="TargetGroupComboBox" Style="{StaticResource ModernComboBox}"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,24,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="CompareButton" Grid.Column="0" Style="{StaticResource SecondaryButton}"
                    Content="Compare with Current" Padding="16,10" IsEnabled="False"/>

            <Button x:Name="CancelButton" Grid.Column="2" Style="{StaticResource SecondaryButton}"
                    Content="Cancel" Margin="0,0,8,0" IsCancel="True"/>
            <Button x:Name="ApplyButton" Grid.Column="3" Style="{StaticResource PrimaryButton}"
                    Content="Apply Template" IsDefault="True" IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>

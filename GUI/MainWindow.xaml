<Window x:Class="PIMBuddy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PIMBuddy - Privileged Identity Management"
        Height="800" Width="1280"
        MinHeight="600" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource BackgroundBrush}">

    <Window.Resources>
        <ResourceDictionary>
            <!-- ============================================== -->
            <!-- LIGHT THEME COLORS                             -->
            <!-- ============================================== -->
            <Color x:Key="Light.Background">#FAFAFA</Color>
            <Color x:Key="Light.Card">#FFFFFF</Color>
            <Color x:Key="Light.CardHover">#F5F5F5</Color>
            <Color x:Key="Light.Primary">#0078D4</Color>
            <Color x:Key="Light.PrimaryHover">#106EBE</Color>
            <Color x:Key="Light.Secondary">#5C2D91</Color>
            <Color x:Key="Light.Text">#323130</Color>
            <Color x:Key="Light.TextSecondary">#605E5C</Color>
            <Color x:Key="Light.TextMuted">#A19F9D</Color>
            <Color x:Key="Light.Border">#E1E1E1</Color>
            <Color x:Key="Light.NavBackground">#F3F2F1</Color>
            <Color x:Key="Light.NavSelected">#DEECF9</Color>
            <Color x:Key="Light.StatusBar">#F3F2F1</Color>
            <Color x:Key="Light.InputBackground">#FFFFFF</Color>
            <Color x:Key="Light.Success">#107C10</Color>
            <Color x:Key="Light.Warning">#FFB900</Color>
            <Color x:Key="Light.Error">#D13438</Color>

            <!-- ============================================== -->
            <!-- DARK THEME COLORS                              -->
            <!-- ============================================== -->
            <Color x:Key="Dark.Background">#1E1E1E</Color>
            <Color x:Key="Dark.Card">#2D2D2D</Color>
            <Color x:Key="Dark.CardHover">#383838</Color>
            <Color x:Key="Dark.Primary">#0078D4</Color>
            <Color x:Key="Dark.PrimaryHover">#1890FF</Color>
            <Color x:Key="Dark.Secondary">#B4A0FF</Color>
            <Color x:Key="Dark.Text">#FFFFFF</Color>
            <Color x:Key="Dark.TextSecondary">#D2D0CE</Color>
            <Color x:Key="Dark.TextMuted">#8A8886</Color>
            <Color x:Key="Dark.Border">#404040</Color>
            <Color x:Key="Dark.NavBackground">#252526</Color>
            <Color x:Key="Dark.NavSelected">#37373D</Color>
            <Color x:Key="Dark.StatusBar">#007ACC</Color>
            <Color x:Key="Dark.InputBackground">#3C3C3C</Color>
            <Color x:Key="Dark.Success">#4CAF50</Color>
            <Color x:Key="Dark.Warning">#FF9800</Color>
            <Color x:Key="Dark.Error">#F44336</Color>

            <!-- ============================================== -->
            <!-- DEFAULT THEME BRUSHES (Light Theme Default)    -->
            <!-- ============================================== -->
            <SolidColorBrush x:Key="BackgroundBrush" Color="{DynamicResource Light.Background}"/>
            <SolidColorBrush x:Key="CardBrush" Color="{DynamicResource Light.Card}"/>
            <SolidColorBrush x:Key="CardHoverBrush" Color="{DynamicResource Light.CardHover}"/>
            <SolidColorBrush x:Key="PrimaryBrush" Color="{DynamicResource Light.Primary}"/>
            <SolidColorBrush x:Key="PrimaryHoverBrush" Color="{DynamicResource Light.PrimaryHover}"/>
            <SolidColorBrush x:Key="SecondaryBrush" Color="{DynamicResource Light.Secondary}"/>
            <SolidColorBrush x:Key="TextBrush" Color="{DynamicResource Light.Text}"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="{DynamicResource Light.TextSecondary}"/>
            <SolidColorBrush x:Key="TextMutedBrush" Color="{DynamicResource Light.TextMuted}"/>
            <SolidColorBrush x:Key="BorderBrush" Color="{DynamicResource Light.Border}"/>
            <SolidColorBrush x:Key="NavBackgroundBrush" Color="{DynamicResource Light.NavBackground}"/>
            <SolidColorBrush x:Key="NavSelectedBrush" Color="{DynamicResource Light.NavSelected}"/>
            <SolidColorBrush x:Key="StatusBarBrush" Color="{DynamicResource Light.StatusBar}"/>
            <SolidColorBrush x:Key="InputBackgroundBrush" Color="{DynamicResource Light.InputBackground}"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="{DynamicResource Light.Success}"/>
            <SolidColorBrush x:Key="WarningBrush" Color="{DynamicResource Light.Warning}"/>
            <SolidColorBrush x:Key="ErrorBrush" Color="{DynamicResource Light.Error}"/>

            <!-- Card Shadow -->
            <DropShadowEffect x:Key="CardShadow" BlurRadius="8" ShadowDepth="2" Opacity="0.15" Color="#000000"/>
            <DropShadowEffect x:Key="CardShadowHover" BlurRadius="12" ShadowDepth="4" Opacity="0.2" Color="#000000"/>

            <!-- ============================================== -->
            <!-- TYPOGRAPHY                                     -->
            <!-- ============================================== -->
            <FontFamily x:Key="DefaultFont">Segoe UI</FontFamily>
            <FontFamily x:Key="IconFont">Segoe MDL2 Assets</FontFamily>

            <Style x:Key="HeaderText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="28"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            </Style>

            <Style x:Key="SubheaderText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="20"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            </Style>

            <Style x:Key="TitleText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            </Style>

            <Style x:Key="BodyText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
            </Style>

            <Style x:Key="CaptionText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
            </Style>

            <Style x:Key="IconText" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource IconFont}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>

            <!-- ============================================== -->
            <!-- CARD STYLES                                    -->
            <!-- ============================================== -->
            <Style x:Key="CardStyle" TargetType="Border">
                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="CornerRadius" Value="8"/>
                <Setter Property="Padding" Value="16"/>
                <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            </Style>

            <Style x:Key="CardStyleHoverable" TargetType="Border" BasedOn="{StaticResource CardStyle}">
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Background" Value="{DynamicResource CardHoverBrush}"/>
                        <Setter Property="Effect" Value="{StaticResource CardShadowHover}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ============================================== -->
            <!-- BUTTON STYLES                                  -->
            <!-- ============================================== -->
            <Style x:Key="PrimaryButton" TargetType="Button">
                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="24,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource PrimaryHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="SecondaryButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="24,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="6"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource NavSelectedBrush}"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="border" Property="Opacity" Value="0.5"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
                <Setter Property="Background" Value="{DynamicResource ErrorBrush}"/>
            </Style>

            <Style x:Key="IconButton" TargetType="Button">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource IconFont}"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Width" Value="36"/>
                <Setter Property="Height" Value="36"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource NavSelectedBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- NAVIGATION BUTTON STYLE                        -->
            <!-- ============================================== -->
            <Style x:Key="NavButton" TargetType="RadioButton">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="GroupName" Value="Navigation"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="RadioButton">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="icon"
                                               Grid.Column="0"
                                               Text="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}"
                                               FontFamily="{StaticResource IconFont}"
                                               FontSize="18"
                                               Foreground="{TemplateBinding Foreground}"
                                               VerticalAlignment="Center"
                                               Margin="0,0,12,0"/>
                                    <ContentPresenter Grid.Column="1"
                                                      VerticalAlignment="Center"/>
                                </Grid>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Setter Property="BorderThickness" Value="3,0,0,0"/>
                                        <Setter Property="BorderBrush" Value="Transparent"/>
                                    </Style>
                                </Border.Style>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource NavSelectedBrush}"/>
                                </Trigger>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource NavSelectedBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter TargetName="icon" Property="Foreground"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter Property="FontWeight" Value="SemiBold"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- TEXTBOX STYLES                                 -->
            <!-- ============================================== -->
            <Style x:Key="ModernTextBox" TargetType="TextBox">
                <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,10"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TextBox">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Padding="{TemplateBinding Padding}"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush"
                                            Value="{DynamicResource TextSecondaryBrush}"/>
                                </Trigger>
                                <Trigger Property="IsFocused" Value="True">
                                    <Setter TargetName="border" Property="BorderBrush"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter TargetName="border" Property="BorderThickness" Value="2"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- COMBOBOX STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernComboBox" TargetType="ComboBox">
                <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Padding" Value="12,10"/>
            </Style>

            <!-- ============================================== -->
            <!-- CHECKBOX STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernCheckBox" TargetType="CheckBox">
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="Cursor" Value="Hand"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="CheckBox">
                            <StackPanel Orientation="Horizontal">
                                <Border x:Name="checkBorder"
                                        Width="20" Height="20"
                                        Background="{DynamicResource InputBackgroundBrush}"
                                        BorderBrush="{DynamicResource BorderBrush}"
                                        BorderThickness="2"
                                        CornerRadius="4"
                                        VerticalAlignment="Center">
                                    <TextBlock x:Name="checkMark"
                                               Text="&#xE73E;"
                                               FontFamily="{StaticResource IconFont}"
                                               FontSize="14"
                                               Foreground="White"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Visibility="Collapsed"/>
                                </Border>
                                <ContentPresenter Margin="10,0,0,0"
                                                  VerticalAlignment="Center"/>
                            </StackPanel>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter TargetName="checkBorder" Property="Background"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter TargetName="checkBorder" Property="BorderBrush"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter TargetName="checkMark" Property="Visibility" Value="Visible"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="checkBorder" Property="BorderBrush"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- SLIDER STYLES                                  -->
            <!-- ============================================== -->
            <Style x:Key="ModernSlider" TargetType="Slider">
                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Height" Value="24"/>
            </Style>

            <!-- ============================================== -->
            <!-- DATAGRID STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernDataGrid" TargetType="DataGrid">
                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="RowBackground" Value="Transparent"/>
                <Setter Property="AlternatingRowBackground" Value="{DynamicResource NavBackgroundBrush}"/>
                <Setter Property="GridLinesVisibility" Value="Horizontal"/>
                <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="RowHeight" Value="44"/>
                <Setter Property="HeadersVisibility" Value="Column"/>
                <Setter Property="SelectionMode" Value="Single"/>
                <Setter Property="AutoGenerateColumns" Value="False"/>
                <Setter Property="CanUserAddRows" Value="False"/>
                <Setter Property="CanUserDeleteRows" Value="False"/>
            </Style>

            <Style x:Key="ModernDataGridColumnHeader" TargetType="DataGridColumnHeader">
                <Setter Property="Background" Value="{DynamicResource NavBackgroundBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Height" Value="44"/>
                <Setter Property="Padding" Value="12,0"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="0,0,0,2"/>
            </Style>

            <Style x:Key="ModernDataGridCell" TargetType="DataGridCell">
                <Setter Property="Padding" Value="12,0"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="DataGridCell">
                            <Border Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}">
                                <ContentPresenter VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
                <Style.Triggers>
                    <Trigger Property="IsSelected" Value="True">
                        <Setter Property="Background" Value="{DynamicResource NavSelectedBrush}"/>
                        <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                    </Trigger>
                </Style.Triggers>
            </Style>

            <!-- ============================================== -->
            <!-- LISTVIEW STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernListView" TargetType="ListView">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="ModernListViewItem" TargetType="ListViewItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Padding" Value="12"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListViewItem">
                            <Border x:Name="border"
                                    Background="{TemplateBinding Background}"
                                    Padding="{TemplateBinding Padding}"
                                    CornerRadius="4">
                                <ContentPresenter/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource CardHoverBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter TargetName="border" Property="Background"
                                            Value="{DynamicResource NavSelectedBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- TAB CONTROL STYLES                             -->
            <!-- ============================================== -->
            <Style x:Key="ModernTabControl" TargetType="TabControl">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
            </Style>

            <Style x:Key="ModernTabItem" TargetType="TabItem">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextSecondaryBrush}"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="16,12"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="TabItem">
                            <Border x:Name="border"
                                    Padding="{TemplateBinding Padding}"
                                    Background="{TemplateBinding Background}"
                                    BorderThickness="0,0,0,2"
                                    BorderBrush="Transparent">
                                <ContentPresenter ContentSource="Header"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                                    <Setter TargetName="border" Property="BorderBrush"
                                            Value="{DynamicResource PrimaryBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- SCROLLBAR STYLES                               -->
            <!-- ============================================== -->
            <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
                <Setter Property="Width" Value="8"/>
                <Setter Property="Background" Value="Transparent"/>
            </Style>

            <!-- ============================================== -->
            <!-- PROGRESS BAR STYLES                            -->
            <!-- ============================================== -->
            <Style x:Key="ModernProgressBar" TargetType="ProgressBar">
                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource PrimaryBrush}"/>
                <Setter Property="Height" Value="4"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ProgressBar">
                            <Grid>
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="2"/>
                                <Border x:Name="PART_Track"/>
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        CornerRadius="2"
                                        HorizontalAlignment="Left"/>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- TOOLTIP STYLES                                 -->
            <!-- ============================================== -->
            <Style x:Key="ModernToolTip" TargetType="ToolTip">
                <Setter Property="Background" Value="{DynamicResource CardBrush}"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="Padding" Value="12,8"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ToolTip">
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="4"
                                    Padding="{TemplateBinding Padding}"
                                    Effect="{StaticResource CardShadow}">
                                <ContentPresenter/>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <!-- ============================================== -->
            <!-- SEPARATOR STYLES                               -->
            <!-- ============================================== -->
            <Style x:Key="ModernSeparator" TargetType="Separator">
                <Setter Property="Background" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="Height" Value="1"/>
                <Setter Property="Margin" Value="0,8"/>
            </Style>

            <!-- ============================================== -->
            <!-- EXPANDER STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernExpander" TargetType="Expander">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderThickness" Value="0"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
            </Style>

            <!-- ============================================== -->
            <!-- GROUPBOX STYLES                                -->
            <!-- ============================================== -->
            <Style x:Key="ModernGroupBox" TargetType="GroupBox">
                <Setter Property="Background" Value="Transparent"/>
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
                <Setter Property="BorderThickness" Value="1"/>
                <Setter Property="FontFamily" Value="{StaticResource DefaultFont}"/>
                <Setter Property="FontSize" Value="14"/>
                <Setter Property="FontWeight" Value="SemiBold"/>
                <Setter Property="Padding" Value="12"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ============================================== -->
        <!-- TITLE BAR                                      -->
        <!-- ============================================== -->
        <Border Grid.Row="0" Background="{DynamicResource PrimaryBrush}" Padding="16,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- App Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="&#xE72E;" FontFamily="{StaticResource IconFont}" FontSize="24"
                               Foreground="White" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="PIMBuddy" FontSize="20" FontWeight="SemiBold"
                               Foreground="White" VerticalAlignment="Center"/>
                    <TextBlock Text="Privileged Identity Management" FontSize="14"
                               Foreground="#CCFFFFFF" VerticalAlignment="Center" Margin="12,0,0,0"/>
                </StackPanel>

                <!-- Right side buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Theme Toggle -->
                    <Button x:Name="ThemeToggleButton" Style="{StaticResource IconButton}"
                            Foreground="White" ToolTip="Toggle Dark/Light Mode"
                            Content="&#xE793;" Margin="0,0,8,0"/>

                    <!-- Help Button -->
                    <Button x:Name="HelpButton" Style="{StaticResource IconButton}"
                            Foreground="White" ToolTip="Help"
                            Content="&#xE897;"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ============================================== -->
        <!-- MAIN CONTENT AREA                              -->
        <!-- ============================================== -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- ============================================== -->
            <!-- NAVIGATION PANEL                               -->
            <!-- ============================================== -->
            <Border Grid.Column="0" Background="{DynamicResource NavBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,0,1,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Connection Button -->
                    <Border Grid.Row="0" Padding="12" BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="0,0,0,1">
                        <Button x:Name="ConnectButton" Style="{StaticResource PrimaryButton}"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE8AF;" FontFamily="{StaticResource IconFont}"
                                           VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBlock x:Name="ConnectButtonText" Text="Connect"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Navigation Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="0,8">
                            <!-- Dashboard -->
                            <RadioButton x:Name="NavDashboard" Style="{StaticResource NavButton}"
                                         Tag="&#xE80F;" Content="Dashboard" IsChecked="True"/>

                            <!-- PIM Groups -->
                            <RadioButton x:Name="NavGroups" Style="{StaticResource NavButton}"
                                         Tag="&#xE716;" Content="PIM Groups"/>

                            <!-- Policies -->
                            <RadioButton x:Name="NavPolicies" Style="{StaticResource NavButton}"
                                         Tag="&#xE8FD;" Content="Policies"/>

                            <!-- Entra Roles -->
                            <RadioButton x:Name="NavRoles" Style="{StaticResource NavButton}"
                                         Tag="&#xE7EF;" Content="Entra Roles"/>

                            <Separator Style="{StaticResource ModernSeparator}" Margin="16,12"/>

                            <!-- Templates -->
                            <RadioButton x:Name="NavTemplates" Style="{StaticResource NavButton}"
                                         Tag="&#xE8A1;" Content="Templates"/>

                            <!-- Import/Export -->
                            <RadioButton x:Name="NavExport" Style="{StaticResource NavButton}"
                                         Tag="&#xE898;" Content="Import/Export"/>

                            <Separator Style="{StaticResource ModernSeparator}" Margin="16,12"/>

                            <!-- Settings -->
                            <RadioButton x:Name="NavSettings" Style="{StaticResource NavButton}"
                                         Tag="&#xE713;" Content="Settings"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Version Info -->
                    <TextBlock Grid.Row="2" Text="v1.0.0" Style="{StaticResource CaptionText}"
                               HorizontalAlignment="Center" Margin="0,8"/>
                </Grid>
            </Border>

            <!-- ============================================== -->
            <!-- CONTENT PANEL                                  -->
            <!-- ============================================== -->
            <Grid Grid.Column="1">
                <!-- Progress Overlay -->
                <Border x:Name="ProgressPanel" Visibility="Collapsed"
                        Background="#80000000" Panel.ZIndex="100">
                    <Border Style="{StaticResource CardStyle}" VerticalAlignment="Center"
                            HorizontalAlignment="Center" Padding="32">
                        <StackPanel>
                            <ProgressBar x:Name="ProgressBar" IsIndeterminate="True"
                                         Style="{StaticResource ModernProgressBar}"
                                         Width="200" Height="4" Margin="0,0,0,16"/>
                            <TextBlock x:Name="ProgressText" Text="Loading..."
                                       Style="{StaticResource BodyText}"
                                       HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Border>

                <!-- Toast Container -->
                <StackPanel x:Name="ToastContainer" VerticalAlignment="Top"
                            HorizontalAlignment="Right" Margin="16" Panel.ZIndex="99"/>

                <!-- Content Pages -->
                <Grid x:Name="ContentArea" Margin="24">
                    <!-- Dashboard Page -->
                    <Grid x:Name="DashboardPage" Visibility="Visible">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Dashboard" Style="{StaticResource HeaderText}" Margin="0,0,0,24"/>

                        <!-- Stats Cards -->
                        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,24">
                            <!-- Total Groups Card -->
                            <Border Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="&#xE716;" FontFamily="{StaticResource IconFont}"
                                               FontSize="32" Foreground="{DynamicResource PrimaryBrush}"/>
                                    <TextBlock x:Name="StatTotalGroups" Text="0"
                                               Style="{StaticResource HeaderText}" Margin="0,8,0,0"/>
                                    <TextBlock Text="PIM Groups" Style="{StaticResource CaptionText}"/>
                                </StackPanel>
                            </Border>

                            <!-- Eligible Assignments Card -->
                            <Border Style="{StaticResource CardStyle}" Margin="6,0">
                                <StackPanel>
                                    <TextBlock Text="&#xE7EF;" FontFamily="{StaticResource IconFont}"
                                               FontSize="32" Foreground="{DynamicResource SecondaryBrush}"/>
                                    <TextBlock x:Name="StatEligibleAssignments" Text="0"
                                               Style="{StaticResource HeaderText}" Margin="0,8,0,0"/>
                                    <TextBlock Text="Eligible Assignments" Style="{StaticResource CaptionText}"/>
                                </StackPanel>
                            </Border>

                            <!-- Active Assignments Card -->
                            <Border Style="{StaticResource CardStyle}" Margin="6,0">
                                <StackPanel>
                                    <TextBlock Text="&#xE8FA;" FontFamily="{StaticResource IconFont}"
                                               FontSize="32" Foreground="{DynamicResource SuccessBrush}"/>
                                    <TextBlock x:Name="StatActiveAssignments" Text="0"
                                               Style="{StaticResource HeaderText}" Margin="0,8,0,0"/>
                                    <TextBlock Text="Active Assignments" Style="{StaticResource CaptionText}"/>
                                </StackPanel>
                            </Border>

                            <!-- Pending Approvals Card -->
                            <Border Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="&#xE8D8;" FontFamily="{StaticResource IconFont}"
                                               FontSize="32" Foreground="{DynamicResource WarningBrush}"/>
                                    <TextBlock x:Name="StatPendingApprovals" Text="0"
                                               Style="{StaticResource HeaderText}" Margin="0,8,0,0"/>
                                    <TextBlock Text="Pending Approvals" Style="{StaticResource CaptionText}"/>
                                </StackPanel>
                            </Border>
                        </UniformGrid>

                        <!-- Quick Actions & Recent Activity -->
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Quick Actions -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                                <StackPanel>
                                    <TextBlock Text="Quick Actions" Style="{StaticResource SubheaderText}" Margin="0,0,0,16"/>

                                    <Button x:Name="QuickSetupWizard" Style="{StaticResource PrimaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,12">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8D4;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Setup Wizard"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="QuickCreateGroup" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE710;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Create PIM Group"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="QuickApplyTemplate" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8A1;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Apply Template"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="QuickAddAssignment" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE8FA;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Add Assignment"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="QuickExport" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE898;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Export Configuration"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="AdvancedActionsButton" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch" Margin="0,0,0,8"
                                            ToolTip="Compare policies, copy settings, view compliance report">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE713;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Advanced Actions"/>
                                        </StackPanel>
                                    </Button>

                                    <Button x:Name="GlobalSearchButton" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Stretch"
                                            ToolTip="Search across groups, roles, and templates (Ctrl+F)">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE721;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Global Search"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Best Practice Recommendations -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                                <StackPanel>
                                    <TextBlock Text="Best Practice Recommendations" Style="{StaticResource SubheaderText}" Margin="0,0,0,16"/>

                                    <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                                        <StackPanel x:Name="RecommendationsList">
                                            <!-- Recommendations will be populated dynamically -->
                                            <Border Background="{DynamicResource NavBackgroundBrush}"
                                                    CornerRadius="4" Padding="12" Margin="0,0,0,8">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Text="&#xE7BA;" FontFamily="{StaticResource IconFont}"
                                                               FontSize="20" Foreground="{DynamicResource WarningBrush}"
                                                               VerticalAlignment="Top" Margin="0,0,12,0"/>
                                                    <StackPanel Grid.Column="1">
                                                        <TextBlock Text="Connect to view recommendations"
                                                                   Style="{StaticResource TitleText}"/>
                                                        <TextBlock Text="Sign in to analyze your PIM configuration"
                                                                   Style="{StaticResource CaptionText}" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </StackPanel>
                                    </ScrollViewer>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Groups Page -->
                    <Grid x:Name="GroupsPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="PIM Groups" Style="{StaticResource HeaderText}"/>
                            <Button x:Name="CreateGroupButton" Grid.Column="1" Style="{StaticResource PrimaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE710;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Create Group"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Search and Filter -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="GroupSearchBox" Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                     Text="" Tag="Search groups..."/>
                            <Button x:Name="EditGroupButton" Grid.Column="2" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE70F;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Manage"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="CopyPolicyButton" Grid.Column="3" Style="{StaticResource SecondaryButton}" Margin="0,0,8,0"
                                    ToolTip="Copy policy settings from one group to another">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE8C8;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Copy Policy"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="RefreshGroupsButton" Grid.Column="4" Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Groups List -->
                        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
                            <DataGrid x:Name="GroupsDataGrid" Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                      CellStyle="{StaticResource ModernDataGridCell}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Display Name" Binding="{Binding DisplayName}" Width="*"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTextColumn Header="Members" Binding="{Binding MemberCount}" Width="80"/>
                                    <DataGridTextColumn Header="Owners" Binding="{Binding OwnerCount}" Width="80"/>
                                    <DataGridTextColumn Header="Created" Binding="{Binding CreatedDateTime, StringFormat=d}" Width="100"/>
                                    <DataGridTemplateColumn Header="Actions" Width="120">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource IconButton}" Content="&#xE70F;"
                                                            ToolTip="Edit" Tag="{Binding Id}"/>
                                                    <Button Style="{StaticResource IconButton}" Content="&#xE74D;"
                                                            ToolTip="Delete" Tag="{Binding Id}"
                                                            Foreground="{DynamicResource ErrorBrush}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>

                    <!-- Policies Page -->
                    <Grid x:Name="PoliciesPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Role Policy Configuration" Style="{StaticResource HeaderText}"/>
                            <Button x:Name="RefreshPoliciesButton" Grid.Column="1" Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>
                        <TextBlock Grid.Row="1" Text="Configure PIM activation settings for Entra ID roles. Select a role from the list to view and edit its policy."
                                   Style="{StaticResource CaptionText}" TextWrapping="Wrap" Margin="0,0,0,24"/>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Policy List -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,16,0" Padding="0">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Margin="16,16,16,8">
                                        <TextBlock Text="Entra ID Roles" Style="{StaticResource TitleText}"/>
                                        <TextBlock Text="Click a role to configure" Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                    <TextBox x:Name="PolicySearchBox" Grid.Row="1" Style="{StaticResource ModernTextBox}"
                                             Text="" Tag="Filter roles..." Margin="16,0,16,8"/>
                                    <ListView x:Name="PolicyTargetList" Grid.Row="2"
                                             Style="{StaticResource ModernListView}"
                                             ItemContainerStyle="{StaticResource ModernListViewItem}">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding DisplayName}" Style="{StaticResource BodyText}" FontWeight="SemiBold"/>
                                                    <TextBlock Text="{Binding Description}" Style="{StaticResource CaptionText}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                </Grid>
                            </Border>

                            <!-- Policy Editor -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}">
                                <ScrollViewer VerticalScrollBarVisibility="Auto">
                                    <StackPanel x:Name="PolicyEditorPanel">
                                        <TextBlock Text="&#xE8FD;" FontFamily="{StaticResource IconFont}" FontSize="48"
                                                   Foreground="{DynamicResource TextMutedBrush}" HorizontalAlignment="Center"
                                                   Margin="0,40,0,16"/>
                                        <TextBlock Text="Select a role to configure its PIM policy"
                                                   Style="{StaticResource BodyText}"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Center"/>
                                        <TextBlock Text="Configure activation duration, MFA requirements, justification, approval, and more."
                                                   Style="{StaticResource CaptionText}"
                                                   Foreground="{DynamicResource TextMutedBrush}"
                                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Roles Page -->
                    <Grid x:Name="RolesPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Header -->
                        <Grid Grid.Row="0" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="Entra ID Roles" Style="{StaticResource HeaderText}"/>
                            <Button x:Name="AssignRoleButton" Grid.Column="1" Style="{StaticResource PrimaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE716;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Assign Group"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Search and Actions -->
                        <Grid Grid.Row="1" Margin="0,0,0,16">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="300"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="RoleSearchBox" Grid.Column="0" Style="{StaticResource ModernTextBox}"
                                     Text="" Tag="Search roles..."/>
                            <Button x:Name="RefreshRolesButton" Grid.Column="2" Style="{StaticResource SecondaryButton}">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="&#xE72C;" FontFamily="{StaticResource IconFont}"
                                               VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock Text="Refresh"/>
                                </StackPanel>
                            </Button>
                        </Grid>

                        <!-- Roles List -->
                        <Border Grid.Row="2" Style="{StaticResource CardStyle}" Padding="0">
                            <DataGrid x:Name="RolesDataGrid" Style="{StaticResource ModernDataGrid}"
                                      ColumnHeaderStyle="{StaticResource ModernDataGridColumnHeader}"
                                      CellStyle="{StaticResource ModernDataGridCell}">
                                <DataGrid.Columns>
                                    <DataGridTextColumn Header="Role Name" Binding="{Binding DisplayName}" Width="*"/>
                                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>
                                    <DataGridTextColumn Header="Built-in" Binding="{Binding IsBuiltIn}" Width="80"/>
                                    <DataGridTemplateColumn Header="Actions" Width="150">
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Style="{StaticResource IconButton}" Content="&#xE716;"
                                                            ToolTip="Assign Group" Tag="{Binding Id}"/>
                                                    <Button Style="{StaticResource IconButton}" Content="&#xE8FD;"
                                                            ToolTip="Configure Policy" Tag="{Binding Id}"/>
                                                </StackPanel>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </Grid>

                    <!-- Templates Page -->
                    <Grid x:Name="TemplatesPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Policy Templates" Style="{StaticResource HeaderText}" Margin="0,0,0,24"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="TemplatesList">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Style="{StaticResource CardStyleHoverable}"
                                                Width="350" Margin="0,0,16,16" Cursor="Hand">
                                            <StackPanel>
                                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                                    <TextBlock Text="{Binding Icon}" FontFamily="{StaticResource IconFont}"
                                                               FontSize="24" Foreground="{DynamicResource PrimaryBrush}"
                                                               VerticalAlignment="Center" Margin="0,0,12,0"/>
                                                    <TextBlock Text="{Binding Name}" Style="{StaticResource TitleText}"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding Description}" Style="{StaticResource CaptionText}"
                                                           TextWrapping="Wrap" Margin="0,0,0,12"/>
                                                <Button Style="{StaticResource SecondaryButton}" Content="Apply Template"
                                                        HorizontalAlignment="Left" Tag="{Binding Id}"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>

                    <!-- Export Page -->
                    <Grid x:Name="ExportPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Import / Export" Style="{StaticResource HeaderText}" Margin="0,0,0,24"/>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!-- Export Section -->
                            <Border Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,12,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="&#xE898;" FontFamily="{StaticResource IconFont}"
                                                   FontSize="24" Foreground="{DynamicResource PrimaryBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <TextBlock Text="Export" Style="{StaticResource SubheaderText}"/>
                                    </StackPanel>

                                    <TextBlock Text="Export your PIM configuration for backup or migration."
                                               Style="{StaticResource BodyText}" TextWrapping="Wrap" Margin="0,0,0,16"/>

                                    <StackPanel>
                                        <CheckBox x:Name="ExportGroups" Style="{StaticResource ModernCheckBox}"
                                                  Content="PIM Groups" IsChecked="True" Margin="0,0,0,8"/>
                                        <CheckBox x:Name="ExportPolicies" Style="{StaticResource ModernCheckBox}"
                                                  Content="Policy Configurations" IsChecked="True" Margin="0,0,0,8"/>
                                        <CheckBox x:Name="ExportAssignments" Style="{StaticResource ModernCheckBox}"
                                                  Content="Role Assignments" IsChecked="True" Margin="0,0,0,16"/>
                                    </StackPanel>

                                    <ComboBox x:Name="ExportFormat" Style="{StaticResource ModernComboBox}"
                                              Margin="0,0,0,16">
                                        <ComboBoxItem Content="JSON (Full Configuration)" IsSelected="True"/>
                                        <ComboBoxItem Content="CSV (Audit Report)"/>
                                    </ComboBox>

                                    <Button x:Name="ExportButton" Style="{StaticResource PrimaryButton}"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xE896;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Export"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>

                            <!-- Import Section -->
                            <Border Grid.Column="1" Style="{StaticResource CardStyle}" Margin="12,0,0,0">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,16">
                                        <TextBlock Text="&#xE8B5;" FontFamily="{StaticResource IconFont}"
                                                   FontSize="24" Foreground="{DynamicResource SecondaryBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,12,0"/>
                                        <TextBlock Text="Import" Style="{StaticResource SubheaderText}"/>
                                    </StackPanel>

                                    <TextBlock Text="Import PIM configuration from a JSON file or CSV for bulk assignments."
                                               Style="{StaticResource BodyText}" TextWrapping="Wrap" Margin="0,0,0,16"/>

                                    <Border BorderBrush="{DynamicResource BorderBrush}" BorderThickness="2"
                                            CornerRadius="8" Padding="32" Margin="0,0,0,16"
                                            Background="{DynamicResource NavBackgroundBrush}">
                                        <StackPanel HorizontalAlignment="Center">
                                            <TextBlock Text="&#xE8B5;" FontFamily="{StaticResource IconFont}"
                                                       FontSize="48" Foreground="{DynamicResource TextMutedBrush}"
                                                       HorizontalAlignment="Center" Margin="0,0,0,8"/>
                                            <TextBlock Text="Drop file here or click to browse"
                                                       Style="{StaticResource BodyText}"
                                                       Foreground="{DynamicResource TextSecondaryBrush}"
                                                       HorizontalAlignment="Center"/>
                                        </StackPanel>
                                    </Border>

                                    <Button x:Name="ImportBrowseButton" Style="{StaticResource SecondaryButton}"
                                            HorizontalAlignment="Left">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="&#xED25;" FontFamily="{StaticResource IconFont}"
                                                       VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBlock Text="Browse Files"/>
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Border>
                        </Grid>
                    </Grid>

                    <!-- Settings Page -->
                    <Grid x:Name="SettingsPage" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Settings" Style="{StaticResource HeaderText}" Margin="0,0,0,24"/>

                        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                            <StackPanel MaxWidth="600">
                                <!-- Appearance -->
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Appearance" Style="{StaticResource TitleText}" Margin="0,0,0,16"/>

                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Theme" Style="{StaticResource BodyText}"/>
                                                <TextBlock Text="Choose between light and dark mode"
                                                           Style="{StaticResource CaptionText}"/>
                                            </StackPanel>
                                            <ComboBox x:Name="ThemeSelector" Grid.Column="1"
                                                      Style="{StaticResource ModernComboBox}" Width="150">
                                                <ComboBoxItem Content="Light" IsSelected="True"/>
                                                <ComboBoxItem Content="Dark"/>
                                            </ComboBox>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- Connection -->
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Connection" Style="{StaticResource TitleText}" Margin="0,0,0,16"/>

                                        <Grid Margin="0,0,0,12">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Cloud Environment" Style="{StaticResource BodyText}"/>
                                                <TextBlock Text="Select your Microsoft cloud environment"
                                                           Style="{StaticResource CaptionText}"/>
                                            </StackPanel>
                                            <ComboBox x:Name="CloudEnvironmentSelector" Grid.Column="1"
                                                      Style="{StaticResource ModernComboBox}" Width="150">
                                                <ComboBoxItem Content="Commercial" IsSelected="True"/>
                                                <ComboBoxItem Content="GCC"/>
                                                <ComboBoxItem Content="GCC-High"/>
                                                <ComboBoxItem Content="DoD"/>
                                            </ComboBox>
                                        </Grid>

                                        <CheckBox x:Name="AutoConnectCheckbox" Style="{StaticResource ModernCheckBox}"
                                                  Content="Auto-connect on startup" Margin="0,8,0,0"/>
                                    </StackPanel>
                                </Border>

                                <!-- Behavior -->
                                <Border Style="{StaticResource CardStyle}" Margin="0,0,0,16">
                                    <StackPanel>
                                        <TextBlock Text="Behavior" Style="{StaticResource TitleText}" Margin="0,0,0,16"/>

                                        <CheckBox x:Name="ShowWarningsCheckbox" Style="{StaticResource ModernCheckBox}"
                                                  Content="Show best practice warnings" IsChecked="True" Margin="0,0,0,8"/>
                                        <CheckBox x:Name="VerboseLoggingCheckbox" Style="{StaticResource ModernCheckBox}"
                                                  Content="Enable verbose logging" Margin="0,0,0,8"/>

                                        <Grid Margin="0,12,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="Default Activation Duration (hours)"
                                                           Style="{StaticResource BodyText}"/>
                                                <TextBlock Text="Default duration when creating new policies"
                                                           Style="{StaticResource CaptionText}"/>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                                <Slider x:Name="DefaultDurationSlider" Minimum="1" Maximum="24"
                                                        Value="4" Width="150" VerticalAlignment="Center"/>
                                                <TextBlock x:Name="DefaultDurationValue" Text="4h"
                                                           Style="{StaticResource BodyText}"
                                                           VerticalAlignment="Center" Margin="12,0,0,0" Width="30"/>
                                            </StackPanel>
                                        </Grid>
                                    </StackPanel>
                                </Border>

                                <!-- About -->
                                <Border Style="{StaticResource CardStyle}">
                                    <StackPanel>
                                        <TextBlock Text="About" Style="{StaticResource TitleText}" Margin="0,0,0,16"/>
                                        <TextBlock Text="PIMBuddy v1.0.0" Style="{StaticResource BodyText}"/>
                                        <TextBlock Text="Privileged Identity Management Tool for Microsoft Entra ID"
                                                   Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                                        <TextBlock Text="PowerShell 7+ | Microsoft Graph SDK"
                                                   Style="{StaticResource CaptionText}" Margin="0,4,0,0"/>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>

        <!-- ============================================== -->
        <!-- STATUS BAR                                     -->
        <!-- ============================================== -->
        <Border Grid.Row="2" Background="{DynamicResource StatusBarBrush}"
                BorderBrush="{DynamicResource BorderBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Connection Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse x:Name="ConnectionIndicator" Width="10" Height="10"
                             Fill="#D13438" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock x:Name="ConnectionText" Text="Not Connected"
                               Style="{StaticResource CaptionText}" VerticalAlignment="Center"/>
                </StackPanel>

                <!-- Right side info -->
                <TextBlock Grid.Column="2" x:Name="StatusBarInfo" Text=""
                           Style="{StaticResource CaptionText}" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
